# UGA Course Scheduler Configuration

# =============================================================================
# Database (PostgreSQL with pgvector)
# =============================================================================
# Local development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/uga_courses

# Supabase (production) - use the "Connection string" from Database Settings
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# IMPORTANT: Use "Transaction" mode pooler (port 6543) for serverless
# DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# =============================================================================
# AI Services
# =============================================================================
# OpenAI API (for embeddings/RAG)
OPENAI_API_KEY=sk-your-key-here

# Anthropic API (for AI features)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Voyage AI (recommended for embeddings - better than OpenAI for search)
VOYAGE_API_KEY=pa-your-voyage-key
EMBEDDING_PROVIDER=voyage  # voyage or openai

# =============================================================================
# External Services
# =============================================================================
# Firecrawl API (for bulletin scraping)
FIRECRAWL_API_KEY=fc-your-key-here

# Stripe (payments)
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# Authentication (Clerk)
# =============================================================================
CLERK_SECRET_KEY=sk_test_xxx
# Frontend uses: VITE_CLERK_PUBLISHABLE_KEY

# =============================================================================
# Email (Resend - for seat alerts)
# =============================================================================
RESEND_API_KEY=re_your-resend-key

# =============================================================================
# Celery/Redis (for background tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Vercel/Production
# =============================================================================
# These are automatically set by Vercel, but you can override:
# VERCEL_URL - automatically set to deployment URL
# VERCEL_ENV - development, preview, or production
